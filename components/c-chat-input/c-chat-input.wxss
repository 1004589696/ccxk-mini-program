/* components/ck-chat-input/ck-chat-input.wxss */
@import "./template/chat-status.wxss";

.send-chat-box {
      position: fixed;
      width: 100%;
      left: 0;
      bottom: 0;
      background-color: rgba(246, 246, 246, 1);
}

.send-bar {
      padding: 15rpx 0;
      border-top: 1rpx solid rgba(217, 217, 217, 0.4);
      background-color: rgba(246, 246, 246, 1);
      display: flex;
}

.bar-left {
      flex: 0 0 98rpx;
      height: 80rpx;
      text-align: center;
}

.bar-left image {
      width: 58rpx;
      height: 58rpx;
      padding: 11rpx;
}

.bar-right {
      flex: 0 0 98rpx;
      height: 80rpx;
      text-align: center;
}

.bar-right image {
      width: 58rpx;
      height: 58rpx;
      padding: 11rpx;
}

.bar-center {
      flex: 1;
}

.bar-center input {
      width: 100%;
      height: 80rpx;
      background-color: #fff;
      border-radius: 8rpx;
      padding: 0 20rpx;
      font-size: 30rpx;
      box-sizing: border-box;
}

.bar-center button {
      width: 100%;
      height: 80rpx;
      line-height: 80rpx;
      background-color: #fff;
      border-radius: 8rpx;
      font-size: 30rpx;
      box-sizing: border-box;
      border: none;
}

.bar-center .recording {
      background-color: rgba(211, 211, 211, 1);
}

.add-box {
      border-top: 1rpx solid rgba(217, 217, 217, 0.4);
      height: 200rpx;
      background-color: rgba(246, 246, 246, 1);
      padding: 0 4rpx 30rpx;
      overflow: hidden;
}

.add-item {
      width: 128rpx;
      margin-left: 46rpx;
      margin-top: 30rpx;
      text-align: center;
      float: left;
}

.add-item view {
      width: 128rpx;
      height: 128rpx;
      text-align: center;
      background-color: #fff;
      border-radius: 10rpx;
}

.add-item view image {
      width: 52rpx;
      height: 40rpx;
      margin-top: 44rpx;
}

.add-item text {
      margin-top: 10rpx;
      font-size: 28rpx;
}

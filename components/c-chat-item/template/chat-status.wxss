.chat-page-status-style {
      position: absolute;
      z-index:10;
      top:0;
      left: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      width: 100%;
      height: 60rpx;
      text-align: center;
      background-color: rgba(234, 245, 251, 1);
}

.chat-page-status-style image {
      width: 35rpx;
      height: 35rpx;
      margin-right: 20rpx;
}

.chat-page-status-style text {
      color: rgba(151, 151, 151, 1);
      font-size: 26rpx;
}
